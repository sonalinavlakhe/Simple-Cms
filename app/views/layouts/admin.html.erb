<!DOCTYPE html>
<html>
	<head>
	  <title>Simple CMS Admin</title>
	  <%= stylesheet_link_tag('application',media='all') %>
	</head>
	<body>
		<div id="header">
			<h1>Simple CMS Admin</h1>
		</div>
		<div id="main">
			<% if !flash[:notice].blank? %>
				<div class="notice">
					<%= flash[:notice] %>
				</div>
			<% end %>
			<div id="content">
				<%= yield %>
			</div>
		</div>
		<div id="footer">
			<p id="copyright">&copy; lynda.com /kevin sham </p>
		</div>
	</body>
</html>
 